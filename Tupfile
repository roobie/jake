CXXC = clang++-7

CFLAGS = -Wall
CFLAGS+= -std=c++17
CFLAGS+= -pthread
CFLAGS+= -O3

INCLUDE = -I/usr/include/SDL2
INCLUDE+= -I/usr/include/luajit-2.0
INCLUDE+= -I/usr/include/libdrm
INCLUDE+= -I./imgui

STATIC_LIBS = imgui/libimgui.a

LIBS = -lSDL2
LIBS+= -lGL
LIBS+= -lGLEW

: foreach *.cpp |> $(CXXC) $(CFLAGS) $(INCLUDE) -c %f -o %o |> %B.o
: *.o $(STATIC_LIBS) |> clang++ %f -o %o $(LIBS) |> jake